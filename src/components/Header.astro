---
import { Picture } from "astro:assets";
import profileImage from "../assets/profile-pic.jpg";

interface Props {
  name: string;
  description: string;
}
const { name, description } = Astro.props;
---

<div class="flex flex-col md:flex-row items-center text-center md:text-left">
  <Picture
    src={profileImage}
    alt={name}
    formats={["avif", "webp"]}
    widths={[128, 160]}
    class="h-32 w-32 md:h-40 md:w-40 object-cover rounded-full mb-4 md:mb-0"
    loading="lazy"
  />
  <div class="md:ml-5 flex flex-col">
    <span class="text-4xl md:text-5xl">{name}</span>
    <span class="text-base">{description}</span>
  </div>
</div>
