---
import Header from "../components/Header.astro";
import Project from "../components/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";

export const projects = [
  {
    name: "Streaks",
    description: "Yet another habit tracking app.",
    status: "In development",
    logo: "streaks-white.svg",
    show: true,
  },
  {
    name: "Dash Cam Platform",
    description: "A platform for dash cam videos.",
    status: "TBA",
    logo: "dashcam.svg",
    show: false,
  },
  {
    name: "Rate My Portfolio",
    description: "A platform for rating portfolios.",
    status: "TBA",
    logo: "portfolio.svg",
    show: false,
  },
  {
    name: "Rolochef",
    description: "A recipe sharing app for chefs.",
    status: "TBA",
    logo: "rolochef.svg",
    show: false,
  },
  {
    name: "Micab",
    description: "A ride-hailing platform for taxis in the Philippines.",
    status: "Legacy",
    logo: "micab-logo.jpeg",
    tech: [
      "logos:nodejs-icon",
      "logos:express",
      "logos:react",
      "logos:redux",
      "logos:mongodb",
      "logos:redis",
      "logos:elasticsearch",
      "logos:kibana",
      "logos:nginx",
      "logos:docker-icon",
      "logos:aws",
      "logos:digital-ocean",
      "logos:google-cloud",
      "logos:google-maps",
    ],
    show: true,
  },
  {
    name: "Micargo",
    description: "Last mile delivery app for logistics in the Philippines.",
    status: "Legacy",
    logo: "micargo-logo.svg",
    show: true,
  },
];
---

